# Debian
alias aud='sudo apt update'
alias aug='sudo apt upgrade'
alias ai='sudo apt install'

# Neovim
alias vi='nvim'

# Git
alias gs='git status'
alias ga='git add'
alias gr='git rm'
alias gc='git commit'
alias gcl='git clone'
alias gch='git checkout'
alias gps='git push'
alias gpl='git pull'

# NPM
alias ngi='sudo npm --global install'
alias ni='npm install'
alias ns='npm start'
alias ngu='sudo npm --global uninstall'
alias nu='npm uninstall'
alias ngl='npm --global list'
alias nl='npm list'
alias nt='npm test'
alias nr='npm run'

# Pip3
alias pi='pip3 install'
alias piu='pip3 install --upgrade'
alias pu='pip3 uninstall'
alias plo='pip3 list --outdated'

# Exa
alias l="exa --long --all"
alias lt="exa --long --tree"

# Suffixes
alias -s {mp4,MP4,mov,MOV,mkv,MKV}='mpv'
alias -s {py,js,html,css,jsx,txt,md,json,c,cpp,h,sh,go,hpp,php,java,ts,tsx,yaml,scss,sass,vim,lua}='nvim'
