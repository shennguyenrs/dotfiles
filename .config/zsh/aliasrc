# Neovim
alias vi='nvim'

# NPM
alias ngi='sudo npm --global install'
alias ngu='sudo npm --global uninstall'
alias ngl='npm --global list'
alias ngu='sudo npm --global update'
alias ni='npm install'
alias ns='npm start'
alias nu='npm uninstall'
alias nr='npm run'
alias nt='npm test'

# Pip3
alias pi='pip3 install'
alias pu='pip3 uninstall'
alias plo='pip3 list --outdated'
alias pug='sudo pip3 list --outdated --format=freeze | grep -v "^\-e" | cut -d = -f 1 | xargs -n1 sudo pip3 install --upgrade'

# Exa
alias l="exa --long --all --header --icons"
alias lt="exa --long --tree --header --icons"

# Suffixes
alias -s {mp4,MP4,mov,MOV,mkv,MKV}='mpv'
alias -s {py,js,jsx,html,css,txt,md,json,c,cpp,h,sh,go,hpp,php,java,ts,tsx,yaml,scss,sass,vim,lua}='nvim'
